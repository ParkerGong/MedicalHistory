<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment2">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@android:dimen/app_icon_size"
            tools:ignore="MissingConstraints">
            <!--  血常规-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:showDividers= "beginning|middle|end"
                android:divider="@drawable/divider_line"
                android:padding="10dp"
                android:orientation="vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="80px"
                android:layout_gravity="center"
                android:text="血常规"/>

            <Button
                android:id="@+id/血常规请求"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下载图片"/>
            <Button
                android:id="@+id/血常规拍照显示"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示/隐藏"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/血常规显示"/>



            <ImageView
                android:id="@+id/图片"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/teal_700"/>

            <!--  尿常规-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:showDividers= "beginning|middle|end"
                android:divider="@drawable/divider_line"
                android:padding="10dp"
                android:orientation="vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="80px"
                android:layout_gravity="center"
                android:text="尿常规"/>

            <Button
                android:id="@+id/尿常规请求"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下载图片"/>
            <Button
                android:id="@+id/尿常规拍照显示"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示/隐藏"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/尿常规显示"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/teal_700"/>
            <!--  凝血-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:showDividers= "beginning|middle|end"
                android:divider="@drawable/divider_line"
                android:padding="10dp"
                android:orientation="vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="80px"
                android:layout_gravity="center"
                android:text="凝血"/>
            <Button
                android:id="@+id/凝血请求"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下载图片"/>
            <Button
                android:id="@+id/凝血拍照显示"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示/隐藏"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/凝血显示"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/teal_700"/>
            <!-- 生化-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:showDividers= "beginning|middle|end"
                android:divider="@drawable/divider_line"
                android:padding="10dp"
                android:orientation="vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="80px"
                android:layout_gravity="center"
                android:text="生化"/>
            <Button
                android:id="@+id/生化请求"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下载图片"/>
            <Button
                android:id="@+id/生化拍照显示"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示/隐藏"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/生化显示"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/teal_700"/>

            <!--  肿瘤标志物-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:showDividers= "beginning|middle|end"
                android:divider="@drawable/divider_line"
                android:padding="10dp"
                android:orientation="vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="80px"
                android:layout_gravity="center"
                android:text="肿瘤标志物"/>
            <Button
                android:id="@+id/肿瘤请求"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下载图片"/>
            <Button
                android:id="@+id/肿瘤标志物拍照显示"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示/隐藏"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/肿瘤标志物显示"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/teal_700"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200px" />




        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>